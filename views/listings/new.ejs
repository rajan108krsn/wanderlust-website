<% layout('layouts/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Listing</title>
</head>
<body>
    <div class="container mt-4">
        <h3 class="text-center mb-4">Create a New Listing</h3>

        <form action="/listings" method="POST" class="needs-validation">
            <div class="mb-3">
                <input type="text" name="listing[title]" placeholder="Title" class="form-control" required>
            </div>

            <div class="mb-3">
                <textarea name="listing[description]" placeholder="Description" class="form-control" rows="3" required></textarea>
            </div>

            <div class="mb-3">
                <input type="number" name="listing[price]" placeholder="Price" class="form-control" required>
            </div>

            <div class="mb-3">
                <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
            </div>

            <div class="mb-3">
                <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
            </div>

            <div class="mb-3">
                <input type="text" name="listing[image]" placeholder="Image URL" class="form-control">
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Submit</button>
                <a href="/listings" class="btn btn-secondary ms-2">Back to Listings</a>
            </div>
        </form>
    </div>
</body>
</html>
