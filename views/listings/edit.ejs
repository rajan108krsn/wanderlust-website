<% layout('layouts/boilerplate') %>
<body>
    <div class="container mt-4">
        <h3 class="text-center mb-4">Edit Your Details</h3>

        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <input type="text" id="description" name="listing[description]" value="<%= listing.description %>" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
            </div>

            <!-- âœ… Fixed: Added Country Field -->
            <div class="mb-3">
                <label for="country" class="form-label">Country:</label>
                <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/listings" class="btn btn-secondary ms-2">Back to all listings</a>
            </div>
        </form>
    </div>
</body>
